<!DOCTYPE html>
<html>
  <head>
    <title>BlogProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application' %>
    <%= %>

  </head>

  <body class='bg-light'>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to 'My Blog', posts_url, class:'navbar-brand' %>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to 'My Posts', current_user_posts_posts_url, class:'nav-item nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Suggested', current_user_suggested_posts_posts_url, class:'nav-item nav-link' %>
            </li>
            <% if current_user.moderator? %>
              <li class="nav-item">
                <%= link_to 'pending posts', pendings_url, class:'nav-item nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Reported posts', reports_url, class:'nav-item nav-link' %>
              </li>
            <% end %>
          </ul>
          <div class="d-flex">
            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link' %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link' %>
            <%= image_tag(current_user.avatar, :class => "rounded-circle", width: "40 px") %>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= tinymce_assets %>
      <%= yield %>
    </div>
  </body>
</html>
