<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <strong><%= User.find(comment.user_id).name %>:</strong>
        <% if comment.cover_picture.attached? %>
          <%= image_tag(comment.cover_picture, width: "50%", height: "200px") %>
          <br>
        <% end %>

        <%= comment.body %>
        <a href="#" class="comment-form-display">reply</a>

        <div class="sub-comment-form">
          <%= render partial: 'users/comments/form', locals: {post: comment.post, parent: comment} %>
        </div>

        <div class="d-flex">

          <div>
            <%= comment.likings.count %>  &#128077
          </div>

          <div>
            <% liking = current_user.likings.find_by(comment: comment) %>
            <% if liking.nil? %>
              <%= button_to "Like", likings_path(comment_id: comment.id), class: 'vote', method: :post, remote: true, data: { toggle_text: 'Dislike', toggle_href: likings_path(comment), id: comment.id } %>
            <% else %>
              <%= button_to "Dislike", liking_path(liking), class: 'vote', method: :delete, remote: true, data: { toggle_text: 'Like', toggle_href: likings_path(comment), id: comment.id } %>
            <% end %>
          </div>

          <div>
            <% report = Report.find_by(reportable_type: "Comment", reportable_id:comment.id, user_id:current_user.id) %>
            <% if report.nil? %>
              <%= button_to "Report", reports_path(comment_id: comment.id, type: "Comment"), method: :post, style: 'display:inline-block' %>
            <% else %>
              <%= button_to "Reported", report_path(report_id: report, comment_id: comment.id, type: "Comment"), method: :delete %>
            <% end %>
          </div>

          <% if comment.user.id == current_user.id %>
            <div>
              <%= button_to 'Delete', [comment.post, comment],
                            method: :delete, class: "button" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
    <hr>

    <div class="sub-comments">
      <%= render comment.comments %>
    </div>

  </article>
</div>
